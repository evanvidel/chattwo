<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cadastro.view.FormSetupActivity">

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/ic_name"
        android:background="@drawable/shape_form_login"
        android:hint="Nome"
        android:padding="15dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/edit_sobrenome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:drawableRight="@drawable/ic_username"
        android:background="@drawable/shape_form_login"
        android:hint="Sobrenome"
        android:padding="15dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_nickname"
        android:background="@drawable/shape_form_login"
        android:hint="Username"
        android:padding="15dp"
        android:inputType="textEmailAddress"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_form_login"
        android:padding="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_date"
        android:inputType="datetime"
        android:hint="Data de Nascimento"
        />
    <RadioGroup
        android:id="@+id/edit_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Escolha Genero"
            android:drawableLeft="@drawable/ic_gender"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"/>


        <RadioButton
            android:id="@+id/masc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:layout_marginStart="30dp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/fem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminino"
            android:layout_marginStart="30dp"/>
        <RadioButton
            android:id="@+id/outro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outro"
            android:layout_marginStart="30dp"
           />

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adicione foto de perfil"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/iv_select_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_add_photo"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
       android:background="@drawable/shape_button"
        android:padding="12dp"
        android:text="Finalizar cadastro" />

</LinearLayout>